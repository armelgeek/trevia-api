{
  "name": "trevia-backend",
  "version": "0.1.2",
  "type": "module",
  "license": "MIT",
  "author": "Armel Wanes",
  "main": "dist/server.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.js"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "prod": "NODE_ENV=production bun run start",
    "create:superuser": "tsx ./drizzle/create-super-admin.ts",
    "start": "bun dist/server.js",
    "prebuild": "rm -rf dist",
    "build": "tsc --noEmitOnError false && tsc-alias",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint .",
    "lint:fix": "bun run lint --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "prerelease": "bun run test",
    "release": "bun run changelogen --release --push",
    "postinstall": "bun simple-git-hooks",
    "db:generate": "bun run drizzle-kit generate",
    "db:check": "npx drizzle-kit check",
    "db:migrate": "tsx ./drizzle/migrate.ts",
    "db:studio": "bun run  drizzle-kit studio",
    "db:push": "bun run drizzle-kit push",
    "db:drop": "tsx ./drizzle/reset.ts",
    "db:seed": "tsx ./drizzle/seed.ts",
    "db:seed:complete": "tsx ./src/infrastructure/database/seed.ts",
    "db:reset": "tsx ./drizzle/reset.ts",
    "db:update": "bun run db:generate && bun run db:migrate",
    "stripe:listen": "bun run stripe listen --forward-to http://localhost:3000/api/stripe/webhook"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run format",
    "commit-msg": "bun run commitlint --edit $1"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-openapi": "^0.19.2",
    "@hono/zod-validator": "^0.4.3",
    "@react-email/components": "0.0.33",
    "@scalar/hono-api-reference": "^0.7.4",
    "@types/node-cron": "^3.0.11",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.2.7",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.5",
    "node-cron": "^4.1.1",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.2",
    "postgres": "^3.4.5",
    "sharp": "^0.34.2",
    "stripe": "^17.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@kolhe/eslint-config": "2.2.6",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.2.8",
    "@types/node": "^22.13.14",
    "@types/node-forge": "^1.3.11",
    "@types/nodemailer": "^6.4.17",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "changelogen": "^0.6.1",
    "cspell": "8.18.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.23.0",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "tsc-alias": "^1.8.13",
    "tsx": "^4.19.4",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
